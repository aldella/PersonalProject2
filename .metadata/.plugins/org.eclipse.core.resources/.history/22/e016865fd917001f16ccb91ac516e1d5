<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sales">

	<select id="getSalesList" resultType="com.personalproject2.per.dto.Sales">
		select * from Sales
	</select>
	
	<select id="getSales">
		select * from Sales where bno=#{bno}
	</select>
	
	<insert id="insSales">
		insert into Sales values (#{title}, #{content})
	</insert>

	<update id="upSales">
		update Sales set content=#{content} where bno=#{bno}
	</update>
	
	<update id="delSales">
		delete from Sales where bno=#{bno}
	</update>
	

</mapper>
<!-- namespace나 해당 명령의 id는 메소드 이름을 의미하며, 중복되면 절대 안된다. -->